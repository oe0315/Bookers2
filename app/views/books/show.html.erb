<div class="container">
	<div class="row">
	<%= flash[:notice] %>
	<%= render 'books/list', book: @book, user: current_user%>
	<div class="col-xs-9">
		<h2>Book detail</h2>
		<table class="table">
			<tbody>
				<tr>
					<td><%= link_to user_path(@book_date.user) do %>
						<%= attachment_image_tag @book_date.user, :profile_image, :fill, 30, 30, class: "pull-left profile-thumb", fallback: "no_image.jpg", size:6*6 %><br>
						<%= @book_date.user.name %>
					    <% end %></td>
					<td><%= link_to @book_date.title %></td>
					<td><%= @book_date.body %></td>
					<td><% if @book_date.user == current_user %>
						<%= link_to edit_book_path(@book_date) do %>
							<span class="btn-sm btn-success">Edit</span><% end %>
						<% end %>
						</td>
					<td><% if @book_date.user == current_user %>
						<%= link_to book_path(@book_date), method: :delete do %>
						<span class="btn-sm btn-danger">Destroy</span>
						<% end %>
						<% end %>
				    </td>
				</tr>
			</tbody>
		</table>
	</div>
</div>
</div>