<div class="col-xs-3">
	<h2>User info</h2>
	<div class="user-edit-image">
		<%= attachment_image_tag user, :profile_image, :fill, 100, 100, class: "pull-left profile-thumb", fallback: "no_image.jpg" %>
	</div>
	<table class="table">
		<tbody>
			<tr></tr>
			<tr>
				<th>name</th>
				<th><%= user.name %></th>
			</tr>
		</tbody>
		<tbody>
			<tr>
				<th>introduction</th>
				<th><%= user.introduction %></th>
			</tr>
		</tbody>
	</table>
	<div class="row">
		<div class="col-lg-12">
			<%= link_to edit_user_path(user.id) do %>
			<button type="button" class="btn btn-default btn-block " aria-label="Left Align"><span class="glyphicon glyphicon-wrench" aria-hidden="true"></span></button>
			<% end %>
		</div>
	</div>
	<h2>New book</h2>
	<%= form_for(book) do |f| %>

	<h4>Title</h4>
	<%= f.text_field :title, size:36 %>

	<h4>opinion</h4>
	<%= f.text_area :body, size: "35*10" %>
	<div class="">
		<input type="submit" name="commit" value="Create Book" class="btn btn-primary col-lg-12" data-disable-with="Create Book">
	</div>
	<% end %>
</div>
