<div class="row">
	<div class="col-lg-3" style="background-color: orange;">
		<h2>User info</h2>
		<div class="user-edit-image">
        <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, class: "pull-left profile-thumb", fallback: "no_image.jpg"%>
       </div>
		<table class="table">
			<thead>
				<tr>
					<th>name</th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				<tr>
					<th>introduction</th>
					<td></td>
				</tr>
			</tbody>
		</table>
		<div class="row">
			<div class="col-lg-12">
				<%= link_to edit_user_path(1) do %>
				<button type="button" class="btn btn-block" aria-label="Left Align"><span class="glyphicon glyphicon-wrench" aria-hidden="true"></span></button>
				<% end %>
			</div>
		</div>
		<h2>New book</h2>
		<% if book.errors.any? %>
		<div id="error_explanation">
			<h2><%= book.errors.count %></h2>
			　<ul>
				　<% book.errors.full_messages.each do |msg| %>
				　<li><%= msg %></li>
				　<% end %>
			　</ul>
		</div>
		<% end %>
		<%= form_for(book) do |f| %>

		<h4>Title</h4>
		<%= f.text_field :title %>

		<h4>opinion</h4>
		<%= f.text_area :body %>
		<div class="">
		<%= f.submit 'Create Book' %>
	    </div>
		<% end %>
	</body>
</div>