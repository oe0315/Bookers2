<div class="container">
	<% if @book.errors.any? %>
	<div id="error_explanation" class="alert alert-danger">
		<ul>
			<h3><%= @book.errors.count %><span>errors prohibited this book from being saved</span></h3>
			<% @book.errors.full_messages.each do |message| %>
			<li><%= message %></li>
			<% end %>
		</ul>
	</div>
	<% end %>
	<%= render 'books/list', book: @book, user: current_user %>
	<div class="col-lg-9">
		<h2>Books</h2>
		<table class="table">
			<thead>
				<tr>
					<th></th>
					<th>Title</th>
					<th>opinion</th>
				</tr>
			</thead>
			<tbody>
				<% @books.each do |book| %>
				<tr>
					<td><a href="/users/1">
						<%= attachment_image_tag book.user,:profile_image, :fill, 30, 30, class: "pull-left profile-thumb" %></a></td>
					<td><%= link_to book.title, book_path(book) %></td>
					<td><%= book.body %></td>
				</tr>
				<% end %>
			</tbody>
		</table>
	</div>
</div>
