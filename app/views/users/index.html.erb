<div class="container">
	<div class="row">
	<%= render 'books/list', book: @book, user: current_user %>
	<div class="col-xs-9">
		<h2>Users</h2>
		<table class="table">
			<thead>
				<tr>
					<th>image</th>
					<th>name</th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				<% @users.each do |user| %>
				<tr>
					<td><%= attachment_image_tag user, :profile_image, :fill, 30, 30, class: "pull-left profile-thumb", fallback: "no_image.jpg", size:6*6 %></td>
					<td><%= user.name %></td>
					<td><%= link_to user_path(user.id) do %>Show
						<% end %>
					</td>
				</tr>
				<% end %>
			</tbody>
		</table>
	</div>
</div>
</div>
