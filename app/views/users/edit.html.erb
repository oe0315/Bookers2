<div class="container">
	<h2>User info</h2>
	<%= form_for(@user) do |f| %>
	<div class="">
		<label>Name</label><%= f.text_field :name%>
		<span class="fa fa-user form-control-icon" aria-hidden="true"></span>
	</div>
	<div class="">
		<label>ProfileImage</label>
		<%= f.attachment_field :profile_image %>
	</div>
	<div class="">
		<label>Introduction</label><%= f.text_area :introduction%>
	</div>
	<div class="">
		<%= f.submit "Update User" %>
		<% end %>
	</div>
</div>