<div class="container">
	<% if @user.errors.any? %>
	<div id="error_explanation" class="alert alert-danger">
		<ul>
			<h3><%= @user.errors.count %><span>errors prohibited this book from being saved</span></h3>
			<% @user.errors.full_messages.each do |message| %>
			<li><%= message %></li>
			<% end %>
		</ul>
	</div>
	<% end %>
		<h2>User info</h2>
		<%= form_for(@user) do |f| %>
		<div class="">
			<label>Name</label><%= f.text_field :name%>
			<span class="fa fa-user form-control-icon" aria-hidden="true"></span>
		</div>
		<div class="">
			<label>ProfileImage</label>
			<%= f.attachment_field :profile_image %>
		</div>
		<div class="">
			<label>Introduction</label><%= f.text_area :introduction%>
		</div>
		<div class="">
			<%= f.submit "Update User" %>
			<% end %>
		</div>
	</div>
