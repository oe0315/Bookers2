<div class="container">
	<%= render 'layouts/notifications' %>
	<div class="row">
		<%= render 'books/list', book: @book, user: @user %>
		<div class="col-xs-9">
			<h2>Books</h2>
			<table class="table">
				<thead>
					<tr>
						<th></th>
						<th>Title</th>
						<th>opinion</th>
					</tr>
				</thead>
				<tbody>
					<% @user.books.each do |book| %>
					<tr>
						<td><%= link_to user_path(@user.id) do %>
							<%= attachment_image_tag book.user, :profile_image, :fill, 30, 30, class: "pull-left profile-thumb" %>
							<% end %>
							</td>
							<td><%= link_to book_path(@user.books.ids) do %><%= book.title %>
							<% end %>
							</td>
							<td><%= book.body %></td>
						</tr>
						<% end %>
					</tbody>
				</table>
			</div>
		</div>
	</div>