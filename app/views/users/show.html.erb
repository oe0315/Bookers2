
<div class="container">
	<%= render 'books/list', book: @book, user: @user %>
	<div class="col-lg-9">
		<h2>Books</h2>
		<table class="table">
			<thead>
				<tr>
					<th></th>
					<th>Title</th>
					<th>opinion</th>
				</tr>
			</thead>
			<tbody>
				<% @books.each do |book| %>
				<tr>
					<td><%= attachment_image_tag book.user,:profile_image, :fill, 30, 30, class: "pull-left profile-thumb" %></td>
					<td><%= book.title %></td>
					<td><%= book.body %></td>
				</tr>
				<% end %>
			</tbody>
		</table>
	</div>
</div>
</div>
