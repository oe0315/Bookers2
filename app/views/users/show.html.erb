
<div class="container">
	<div class="row">
		<div class="col-lg-3" style="background-color: orange;">
			<h2>User info</h2>
			<table class="table">
				<thead>
					<tr>
						<th>name</th>
						<th></th>
					</tr>
				</thead>
				<tbody>
					<tr>
						<th>introduction</th>
						<td></td>
					</tr>
				</tbody>
			</table>
			<div class="row">
				<div class="col-lg-12">
					<button type="button" class="btn btn-default" aria-label="Left Align"><span class="glyphicon glyphicon-wrench" aria-hidden="true"></span>
					</button>
				</div>
			</div>
			<h2>New book</h2>
			<%= form_for(@book) do |f| %>

			<h4>Title</h4>
			<%= f.text_field :title %>

			<h4>opinion</h4>
			<%= f.text_area :body %>

			<%= f.submit 'Create Book' %>
			<% end %>
		</body>
	</div>
	<div class="col-lg-9">
		<h2>Books</h2>
		<table class="table">
			<thead>
				<tr>
					<th></th>
					<th>Title</th>
					<th>opinion</th>
				</tr>
			</thead>
			<tbody>
				<% @books.each do |book| %>
				<tr>
					<td></td>
					<td><%= book.title %></td>
					<td><%= book.body %></td>
				</tr>
				<% end %>
			</tbody>
		</table>
	</div>
</div>
</div>
